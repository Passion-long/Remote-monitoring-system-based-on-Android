<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ffffff">

    <RelativeLayout
        android:layout_height="90dp"
        android:layout_width="match_parent">
        <Button
            android:id="@+id/his_btn00"
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="80dp"
            android:background="#ffffff"
            android:text="返回"
            android:textStyle="bold"
            android:textColor="@color/aquamarine"
            android:textSize="14sp" />
    </RelativeLayout>

    <TextView
        android:id="@+id/his_text4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="0dp"
        android:text="历史趋势图参数选择"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:textColor="#000000" />
    <RelativeLayout

        android:layout_height="match_parent"
        android:layout_width="wrap_content">

        <TextView
            android:id="@+id/his_text5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="30dp"
            android:layout_marginRight="80dp"
            android:background="@drawable/blue_select"
            android:text="选择参数"
            android:textColor="@color/aquamarine"
            android:textSize="18sp" />

        <Button
            android:id="@+id/his_btn4"
            android:layout_width="120dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="120dp"
            android:layout_marginTop="28dp"
            android:layout_marginRight="180dp"
            android:background="#C4C4C4C4"
            android:text="NDS轧制力"
            android:textAlignment="center"
            android:textColor="@color/aquamarine"
            android:textSize="18sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/his_btn5"
            android:layout_width="130dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="28dp"
            android:layout_marginRight="35dp"
            android:background="#C4C4C4C4"
            android:text="钢带厚度"
            android:textAlignment="center"
            android:textColor="@color/aquamarine"
            android:textSize="18sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/his_btn6"
            android:layout_width="120dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="120dp"
            android:layout_marginTop="68dp"
            android:layout_marginRight="180dp"
            android:background="#C4C4C4C4"
            android:text="DS轧制力"
            android:textAlignment="center"
            android:textColor="@color/aquamarine"
            android:textSize="18sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/his_btn7"
            android:layout_width="130dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="68dp"
            android:layout_marginRight="35dp"
            android:background="#C4C4C4C4"
            android:text="DS辊缝零位"
            android:textAlignment="center"
            android:textColor="@color/aquamarine"
            android:textSize="18sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/his_btn8"
            android:layout_width="120dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="120dp"
            android:layout_marginTop="108dp"
            android:layout_marginRight="180dp"
            android:background="#C4C4C4C4"
            android:text="NDS实际辊缝"
            android:textAlignment="center"
            android:textColor="@color/aquamarine"
            android:textSize="18sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/his_btn9"
            android:layout_width="130dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="108dp"
            android:layout_marginRight="35dp"
            android:background="#C4C4C4C4"
            android:text="DS实际辊缝"
            android:textAlignment="center"
            android:textColor="@color/aquamarine"
            android:textSize="18sp"
            android:textStyle="bold" />



    </RelativeLayout>

</LinearLayout>